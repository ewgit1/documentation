

create table ew_itm_qrys
(
itm_id  text,
itm_typ text,
qry_id  uuid,
primary key(itm_id,qry_id)
);

create table vt_forum_qrys
(
qry_id uuid,
usr_id text ,
qry_title text,
qry_txt text,
qry_ts timestamp,
qry_tags SET<uuid>,
qry_pst_id uuid,
PRIMARY KEY (qry_id)
);

create table vt_usr_comnt_lvl0(
pst_id 		uuid,
usr_id 		text,
cmnt_id 	uuid,
cmnt_txt text,
cmnt_img  SET<text>,
cmnt_atch  SET<text>,
cmnt_vid  SET<text>,
cmnt_lvl  text,
cmnt_cmnt_id uuid,
cmnt_ts timestamp,
PRIMARY KEY((pst_id),cmnt_ts ,cmnt_id)
);

create table vt_qry_trend
(
qry_id uuid ,
vw_cnt  counter,
primary key ((qry_id) , vw_cnt)
)  WITH CLUSTERING ORDER BY (vw_cnt desc);



create table vt_qry_vws
(
qry_id uuid ,
usr_id text ,
vw_ts timestamp,
primary key (qry_id,usr_id,vw_ts)
);


create table vt_qry_like
(
qry_id uuid,
cmnt_id uuid,
usr_id text,
like_dlike_flg  int,
crt_ts timestamp,
primary key((qry_id,usr_id),cmnt_id)
);



create table vt_qry_like_stats
(
qry_id uuid,
cmnt_id uuid ,
like_cnt counter,
dlike_cnt counter,
primary key (qry_id,cmnt_id)
);

create table vt_qry_cats
(
cat_id uuid,
cat_name text,
cat_desc text,
crt_ts timestamp,
primary key (cat_id)
);



create table ew_qry_stats
(
qry_id  uuid,
qry_upv counter,
qry_dnv counter,
qry_ans counter ,
qry_shr counter,
qry_flw counter,
qry_vws counter,
primary key (qry_id) 
);

create table ew_qry_usr_stats
(
qry_id uuid,
usr_id text,
like_dlike_flg  boolean,
qry_shr  boolean,
qry_flw boolean,
qry_vws  boolean,
qry_ans boolean,
crt_ts timestamp,
primary key(qry_id,usr_id)
);


create table ew_qry_usr_stats_cnt
(
qry_id uuid,
usr_id text,
qry_vws  counter,
qry_ans counter,
primary key(qry_id,usr_id)
);

create table ew_qry_flw
(
usr_id text,
qry_id uuid,
flw_ts timestamp,
primary key( (qry_id),usr_id)
)


create table ew_qry_flw_ntf
(
usr_id text,
qry_id uuid,
ans_id uuid,
ans_usr_id text,
ans_ts timestamp,
ntf_vw_flg boolean,
primary key((usr_id), ans_usr_id , ans_ts )
)


create table ew_qry_ans_ltr
(
usr_id text,
qry_id uuid,
crt_ts timestamp,
ans_flg boolean,
primary key((usr_id), qry_id)
);

create table ew_cmpln_rsn
(
usr_id text,
cmpln_typ text ,
cmpln_id uuid,
cmpln_rsn text,
cmpln_ts timestamp,
primary key(usr_id,cmpln_ts) 
) with clustering order by(cmpln_ts desc)


create table ew_del_rsn
(
usr_id text,
del_typ text ,
del_id uuid,
del_rsn  text,
del_ts timestamp,
primary key(usr_id,del_ts) 
) with clustering order by(del_ts desc)

create table ew_contact_msgs
(
msg_id uuid,
fst_nm  text,
email text,  
ph_no text,
msg  text,
msg_ts timestamp,
PRIMARY KEY (msg_id )
);

